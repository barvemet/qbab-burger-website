# Database Configuration
DB_HOST=localhost
DB_NAME=qbab_database
DB_USER=your_database_user
DB_PASS=your_database_password

# Fiskaly TSE Configuration
FISKALY_API_KEY=your_fiskaly_api_key
FISKALY_API_SECRET=your_fiskaly_api_secret
FISKALY_TSS_ID=your_tss_id
FISKALY_CLIENT_ID=your_client_id

# Fiskaly Middleware (Optional - only if using Middleware TSE)
FISKALY_USE_MIDDLEWARE=false
FISKALY_MIDDLEWARE_URL=http://localhost:8000

# Stripe Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Email Configuration (if needed)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@yourdomain.com

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true

# Security
APP_KEY=your_random_32_character_key_here
HASH_SALT=your_random_hash_salt_here
